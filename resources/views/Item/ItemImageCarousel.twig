<script type="x/template" id="vue-item-image-carousel">
    <div itemscope itemtype="http://schema.org/Thing">
        <div id="single-carousel" class="owl-carousel owl-theme owl-single-item" ref="single">
            <div v-for="image in singleImages">
                <a :href="image.url" data-lightbox="single-big-image-gallery">
                    <img class="owl-lazy" :data-src="image.url" :alt="getAltText(image)" :title="getItemName()" itemprop="image">
                </a>
            </div>
        </div>
        <div>
          <h4>Bilder</h4>
        </div>
        <div id="thumb-carousel" class="owl-thumbs owl-carousel owl-theme owl-single-item" ref="thumbs">
            <img
                @click="goTo(index)"
                class="owl-thumb"
                v-bind:class="{ 'active': currentItem === index }"
                :src="imagePreview.url"
                :alt="getAltText(imagePreview)"
                :title="getItemName()"
                v-for="(imagePreview, index) in carouselImages"
            >
        </div>
        <h2>Beispiel eines Modals</h2>
        <p>Das ist nur ein Beispiel</p>

        <img id="myImg" src="https://www.w3schools.com/howto/img_snow.jpg" alt="Snow" style="width:100%;max-width:300px"><br/><br/>
        <video id="myImg" src="https://www.w3schools.com/html/movie.mp4" type="video/mp4"></video>

        <!-- The Modal -->
        <div id="myModal" class="modal">
          <span class="close">&times;</span>
          <img class="modal-content" id="img01">
          <div id="caption"></div>
        </div>


    </div>
</script>
